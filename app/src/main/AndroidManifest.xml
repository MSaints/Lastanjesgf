        <activity android:name=".Activities.DefinicoesActivity" />
        <activity
            android:name=".Activities.MensagensActivity"
            android:label="@string/title_activity_mensagens"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.MainVendasActivity" />
        <activity
            android:name=".Activities.MercadoriaVendidaActivity"
            android:label="@string/title_activity_mercadoria_vendida"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.MinhaBancaActivity"

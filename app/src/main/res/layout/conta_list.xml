<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/conta_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome da Conta"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

            <!--<TextView
                android:id="@+id/title1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="M"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:background="@drawable/cicle_ico"
                android:gravity="center_vertical" />-->

            <TextView
                android:id="@+id/conta_saldo"
                android:layout_below="@id/conta_nome"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.000"
                android:textColor="@color/txt_green"
                android:textSize="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/conta_saldo"
                android:layout_marginBottom="5dp"
                android:layout_alignBottom="@id/conta_saldo"
                android:text="MZN"
                android:textColor="@color/txt_green" />

            <ImageView
                android:id="@+id/historico"
                app:srcCompat="@drawable/ic_swap_vertical_circle_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/conta_nome"
                android:layout_alignRight="@+id/conta_nome"
                android:layout_centerVertical="true" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>
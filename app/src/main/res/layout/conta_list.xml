<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

    <ImageView
        android:id="@+id/contaImg"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="100dp"
        app:srcCompat="@drawable/ic_mkesh" />


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp">


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/conta_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="20.000"
            android:textColor="@color/txt_green"
            android:textSize="26dp" />

        <TextView
            android:layout_toRightOf="@id/conta_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@id/conta_saldo"
            android:text="MT"
            android:textColor="@color/txt_green" />
    </RelativeLayout>


    <!--<ImageView
        android:id="@+id/historico"
        app:srcCompat="@drawable/ic_swap_vertical_circle_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/conta_linear"
        android:layout_alignRight="@+id/conta_linear"
        android:layout_centerVertical="true" />-->

    </androidx.cardview.widget.CardView></RelativeLayout>

    </LinearLayout>
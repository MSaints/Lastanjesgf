<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    android:background="@color/bg_grey"
    android:orientation="vertical"
    tools:context="com.afrofx.code.anjesgf.Activities.drawer.DefinitionsActivity"
    tools:showIn="@layout/activity_definitions">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin10dp">

        <ImageView
            android:id="@+id/definitonsInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10dp"
            android:tint="@color/gray_btn_bg_pressed_color"
            app:srcCompat="@drawable/ic_help_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/definitonsInfo1"
            android:singleLine="true"
            android:text="Receber Notificações"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="@dimen/font16sp" />

        <Switch
            android:id="@+id/definitionSwitch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin10dp">

        <ImageView
            android:id="@+id/definitonsInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10dp"
            android:tint="@color/gray_btn_bg_pressed_color"
            app:srcCompat="@drawable/ic_help_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/definitonsInfo2"
            android:singleLine="true"
            android:text="Recibo ou Factura por SMS"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="@dimen/font16sp" />

        <Switch
            android:id="@+id/definitionSwitch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin10dp">

        <ImageView
            android:id="@+id/definitonsInfo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10dp"
            android:tint="@color/gray_btn_bg_pressed_color"
            app:srcCompat="@drawable/ic_help_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/definitonsInfo3"
            android:singleLine="true"
            android:text="Controlo de Segurança"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="@dimen/font16sp" />

        <Switch
            android:id="@+id/definitionSwitch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin10dp">

        <ImageView
            android:id="@+id/definitonsInfo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10dp"
            android:tint="@color/gray_btn_bg_pressed_color"
            app:srcCompat="@drawable/ic_help_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/definitonsInfo4"
            android:singleLine="true"
            android:text="Limite de Vendas"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="@dimen/font16sp" />

        <Switch
            android:id="@+id/definitionSwitch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>



</LinearLayout>

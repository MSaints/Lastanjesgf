<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_grey">

    <TextView
        android:id="@+id/definitionInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Ajuda"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center_horizontal" />


    <androidx.cardview.widget.CardView
        android:id="@+id/OpcaoManual1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:weightSum="100">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2dp"
                android:layout_weight="70"
                android:src="@drawable/ic_collections_bookmark"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/textOpcaoManual1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Manual de Ajuda"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/OpcaoManual2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:weightSum="100">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2dp"
                android:layout_weight="70"
                android:src="@drawable/ic_call_black"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/textOpcaoManual2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Central de Apoio"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/definitionInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="Activar Impostos"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center_horizontal" />


        <RelativeLayout

            android:layout_marginTop="@dimen/margin10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">

            <ImageView
                android:id="@+id/impostoInfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:tint="@color/gray_btn_bg_pressed_color"
                app:srcCompat="@drawable/ic_help_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/impostoInfo1"
                android:gravity="left"
                android:text="CobranÃ§a do IVA (17%)"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/impostoSwitch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/margin10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/impostoInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:tint="@color/gray_btn_bg_pressed_color"
            app:srcCompat="@drawable/ic_help_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/impostoInfo2"
            android:text="Imposto Simplificado (3%)"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/impostoSwitch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10dp"
        android:paddingHorizontal="10dp">

        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/impostoInfo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:tint="@color/gray_btn_bg_pressed_color"
            app:srcCompat="@drawable/ic_help_black_24dp" />

        <EditText
            android:id="@+id/customImposto"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/impostoInfo3"
            android:gravity="left"
            android:singleLine="true"
            android:hint="Percen. Ex:10"
            android:textSize="14sp"
            android:inputType="number"
            android:background="@drawable/edit_style" />

        <Switch
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:id="@+id/impostoSwitch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" />
    </RelativeLayout>

</LinearLayout>